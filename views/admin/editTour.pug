    link(href='/admin/css/sb-admin-2.min.css' rel='stylesheet')
    link(rel='shortcut icon' type='image/png' href='/img/favicon.ico')
    title DeTours 
  body#page-top
    // Page Wrapper
    #wrapper
      // Sidebar
      ul#accordionSidebar.navbar-nav.bg-detours.sidebar.sidebar-dark.accordion
        // Sidebar - Brand
        a.sidebar-brand.d-flex.align-items-center.justify-content-center(href='/')
          .sidebar-brand-icon
            i.fas.fa-home
          .sidebar-brand-text.mx-3
            | DeTours 
        // Divider
        hr.sidebar-divider.my-0
        // Nav Item - Dashboard
        li.nav-item(class=`${active === 'dashboard'? 'active' : ''}`)
          a.nav-link(href='/admin')
            i.fas.fa-fw.fa-tachometer-alt
            span Dashboard
        // Divider
        hr.sidebar-divider
        // Nav Item - Charts
        li.nav-item(class=`${active === 'users'? 'active' : ''}`)
          a.nav-link(href='/admin/users')
            i.fas.fa-fw.fa-users
            span Users
        // Divider
        hr.sidebar-divider
        // Nav Item - Tables
        li.nav-item(class=`${active === 'tours'? 'active' : ''}`)
          a.nav-link(href='/admin/tours')
            i.fas.fa-fw.fa-suitcase-rolling
            span Tours
        // Divider
        hr.sidebar-divider.d-none.d-md-block
        // Nav Item - Tables
        li.nav-item(class=`${active === 'bookings'? 'active' : ''}`)
          a.nav-link(href='/admin/bookings')
            i.fas.fa-fw.fa-book
            span Bookings
        // Divider
        hr.sidebar-divider.d-none.d-md-block
        // Sidebar Toggler (Sidebar)
        .text-center.d-none.d-md-inline
          button#sidebarToggle.rounded-circle.border-0
      // End of Sidebar
      // Content Wrapper
      #content-wrapper.d-flex.flex-column
        // Main Content
        #content
          // Topbar
          nav.navbar.navbar-expand.navbar-light.bg-white.topbar.mb-4.static-top.shadow
            // Sidebar Toggle (Topbar)
            button#sidebarToggleTop.btn.btn-link.d-md-none.rounded-circle.mr-3
              i.fa.fa-bars
            // Topbar Navbar
            ul.navbar-nav.ml-auto
              // Nav Item - User Information
              li.nav-item.dropdown.no-arrow
                a#userDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                  span.mr-2.d-lg-inline.text-gray-800.small.mr-2= user.name
                  i.fas.fa-caret-down.fa-sm.text-gray-800
                // Dropdown - User Information
                .dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby='userDropdown')
                  a.dropdown-item(href='#' data-toggle='modal' data-target='#logoutModal')
                    i.fas.fa-sign-out-alt.fa-sm.fa-fw.mr-2.text-gray-400
                    |             Logout
          // End of Topbar
          // Begin Page Content
          .container-fluid
            // btn create
            .d-sm-flex.align-items-center.justify-content-between.mb-4
              h1.h3.mb-0.text-gray-800= `Edit Tour ${tourEdit.name}`
            .card.shadow
              .card-body
                form#tour-form
                  input(type="hidden" value=`${tourEdit.id}` class="tourEdit")
                  .form-group
                    label(for='name') Name
                    input#name.form-control(type='text' required minlength='10' maxLength="40" value=`${tourEdit.name}`)
                  .form-group
                    label(for='description') Description
                    textarea#description.form-control.d-block.w-100( rows='7' required)= tourEdit.description
                  .form-group
                    label(for='price') Price
                    input#price.form-control(type='number' required value=`${tourEdit.price}`)
                  .form-group
                    label(for='price') Duration
                    input#duration.form-control(type='number' required value=`${tourEdit.duration}`)
                  .form-group
                    label(for='maxGroupSize') Participant
                    input#maxGroupSize.form-control(type='number' required value=`${tourEdit.maxGroupSize}`)
                  .form-group
                    label(for='startDate') Departure Date
                    - const date = tourEdit.startDate.toISOString().split('T')[0]
                    input#startDate.form-control(type='date' required value=`${date}`)
                  .form-group
                    label(for='startLoc') Start Location
                    input#startLoc.form-control(type='text' required value=`${tourEdit.startLoc}`)
                  .form-group
                    label(for='location') Location
                    input#location.form-control(type='text' required value=`${tourEdit.location}`)
                  .form-group
                    label(for='imageCover') Image Cover
                    input#imageCover.form-control(type='file' accept='image/*')
                  .form-group
                    label(for='image' required) Images
                    input#images.form-control(type='file' multiple accept='image/*')
                  //- .form-group
                  //-   label(for='image' required) Images
                  //-   .row
                  //-     .col-lg-4.mb-1.mb-lg-0
                  //-       input#image.form-control.form-control-user(type='file')
                  //-     .col-lg-4.mb-1.mb-lg-0
                  //-       input#image.form-control.form-control-user(type='file')
                  //-     .col-lg-4.mb-lg-0
                  //-       input#image.form-control.form-control-user(type='file')
                  button.btn.btn-success.btn-block.mt-4(type='submit') Update
          // /.container-fluid
          // End of Main Content
          // End of Content Wrapper
          // End of Page Wrapper
    // Scroll to Top Button
    a.scroll-to-top.rounded(href='#page-top')
      i.fas.fa-angle-up
    // Logout Modal
    #logoutModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#exampleModalLabel.modal-title Ready to Leave?
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') Ã—
          .modal-body Select "Logout" below if you are ready to end your current session.
          .modal-footer
            form
              button.btn.btn-secondary.mr-2(type='button' data-dismiss='modal') Cancel
              button.btn.btn-primary#logout(type='submit')
                | Logout
